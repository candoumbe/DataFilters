<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\core.props" />
  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;netstandard2.0;netstandard2.1</TargetFrameworks>
    <Product />
    <Description>Sets of classes to convert querystrings to strongly typed expressions.</Description>
    <PackageTags>expressions, querystring</PackageTags>
    <RepositoryType>git</RepositoryType>
    <Version>4.0.0</Version>
    <PackageReleaseNotes>Added conversions of "sort" expressions</PackageReleaseNotes>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl>github.com/candoumbe/DataFilters</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.1' ">
    <DefineConstants>STRING_SEGMENT</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="1.5.0" />
    <PackageReference Include="Utilities" Version="2019.*" />
  </ItemGroup>
  <Choose>
    <When Condition="'$(TargetFramework)'=='netstandard1.3'">
      <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Primitives" Version="1.1.1" />
        <PackageReference Include="Newtonsoft.Json.Schema" Version="2.0.13" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Newtonsoft.Json.Schema" Version="3.*" />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>
